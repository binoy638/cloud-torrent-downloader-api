{
  "name": "streamize-api",
  "version": "1.0.0",
  "description": "A node js video streaming server with torrent downloading support",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node ./dist/src/index.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format:check": "prettier -c \"**/*.{js,ts,json}\"",
    "format": "prettier -w \"**/*.{js,ts,json}\"",
    "lint": "eslint --fix ./src/*",
    "install:husky": "husky install",
    "pre-commit": "npm run typecheck && lint-staged && jest"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint",
    "**/*.{js,ts,json}": "prettier --write"
  },
  "keywords": [],
  "author": "binoy638",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.12",
    "@types/webtorrent": "^0.109.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "amqp-connection-manager": "^4.0.1",
    "amqplib": "^0.8.0",
    "bcrypt": "^5.0.1",
    "check-disk-space": "^3.3.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^10.0.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.8",
    "morgan": "^1.10.0",
    "nanoid": "^3.2.0",
    "pretty-bytes": "^5.6.0",
    "redis": "^4.0.3",
    "sprite-vtt-generator": "^1.0.7",
    "ts-node-dev": "^1.1.8",
    "webtorrent": "^1.7.1",
    "winston": "^3.5.1",
    "yup": "^0.32.11"
  }
}
